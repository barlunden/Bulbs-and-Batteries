// src/components/InventoryCard.astro
interface Props {
  id: string;
  name: string;
  category: "bulb" | "battery" | "ink";
  type: string;
  shape?: string;
  location?: string; // Deprecated, bruk building/department/detail
  building?: string;
  department?: string;
  detail?: string;
  quantity?: number;
  requiredCount: number;
  notes?: string;
  inStockCount: number;
  colorTemp?: string;
  dimmable?: string | boolean;
  rechargeable?: string | boolean;
  lastReplaced?: string;
  stockMap?: Record<string, number>; // For Ã¥ vise stock per patron
}

const { 
  id, name, category, type, shape, location, 
  building, department, detail, quantity,
  requiredCount, notes, inStockCount, colorTemp,
  dimmable, rechargeable, lastReplaced, stockMap
} = Astro.props;

// Konverterer til boolean i tilfelle dei kjem som strengar frÃ¥ databasen
const isRechargeable = rechargeable === true || rechargeable === "true";
const isDimmable = dimmable === true || dimmable === "true";

// For printerblekk: parse patronar frÃ¥ shape-feltet
const isPrinter = category === "ink";
const cartridges = isPrinter && shape ? shape.split(",").map(c => c.trim()) : [];

// For printerar: hent stock-count per patron
const cartridgeStocks = isPrinter && stockMap 
  ? cartridges.map(cartridge => ({
      name: cartridge,
      count: stockMap[`${type}-${cartridge}-false-false`] || 0
    }))
  : [];

// Sjekk om vi har nok pÃ¥ lager (berre relevant for dingsar som ikkje er oppladbare)
const itemQuantity = quantity || 1;
const totalRequired = requiredCount * itemQuantity;
const isOutOfStock = !isRechargeable && !isPrinter && (inStockCount < totalRequired);

// Bygg opp lokasjon frÃ¥ strukturerte felt, eller fall tilbake pÃ¥ gammal location
const locationDisplay = building || department || detail
  ? [building, department, detail].filter(Boolean).join(" / ")
  : location;

// Formater sist byttet-dato
const formatDate = (dateStr?: string) => {
  if (!dateStr) return null;
  const date = new Date(dateStr);
  const now = new Date();
  const diffDays = Math.floor((now.getTime() - date.getTime()) / (1000 * 60 * 60 * 24));
  
  if (diffDays === 0) return "I dag";
  if (diffDays === 1) return "I gÃ¥r";
  if (diffDays < 7) return `${diffDays} dager siden`;
  if (diffDays < 30) return `${Math.floor(diffDays / 7)} uker siden`;
  if (diffDays < 365) return `${Math.floor(diffDays / 30)} mÃ¥neder siden`;
  return `${Math.floor(diffDays / 365)} Ã¥r siden`;
};
