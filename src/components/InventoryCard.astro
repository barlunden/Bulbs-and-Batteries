---
// src/components/InventoryCard.astro
interface Props {
  id: string;
  name: string;
  category: "bulb" | "battery";
  type: string;
  shape?: string;
  location?: string;
  requiredCount: number;
  notes?: string;
  inStockCount: number;
  colorTemp?: string;
  dimmable?: string | boolean;
  rechargeable?: string | boolean;
}

const { 
  id, name, category, type, shape, location, 
  requiredCount, notes, inStockCount, colorTemp,
  dimmable, rechargeable 
} = Astro.props;

// Konverterer til boolean i tilfelle dei kjem som strengar fr√• databasen
const isRechargeable = rechargeable === true || rechargeable === "true";
const isDimmable = dimmable === true || dimmable === "true";

// Sjekk om vi har nok p√• lager (berre relevant for dingsar som ikkje er oppladbare)
const isOutOfStock = !isRechargeable && (inStockCount < requiredCount);
---

<div class={`group p-6 rounded-[2.5rem] border-2 transition-all duration-300 ${
  isOutOfStock 
    ? 'border-red-200 bg-red-50/50 shadow-sm' 
    : isRechargeable 
      ? 'border-emerald-100 bg-emerald-50/30' 
      : 'border-slate-100 bg-white shadow-sm hover:shadow-md'
}`}>
  
  <div class="flex justify-between items-start mb-4">
    <div class="space-y-1">
      <div class="flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-slate-300"></span>
        <p class="text-[10px] font-black uppercase tracking-[0.15em] text-slate-400">
          {location || 'Ingen lokasjon sett'}
        </p>
      </div>
      <h3 class="text-xl font-black text-slate-900 leading-tight tracking-tight">
        {name}
      </h3>
    </div>
    
    {!isRechargeable && (
      <div class={`px-3 py-1.5 rounded-2xl text-[10px] font-black uppercase tracking-tighter border-2 ${
        isOutOfStock 
          ? 'bg-red-500 border-red-500 text-white animate-pulse' 
          : 'bg-white border-slate-100 text-slate-600'
      }`}>
        Lager: {inStockCount}
      </div>
    )}
  </div>

  <div class="flex flex-wrap gap-2 mb-5">
    <span class="bg-slate-900 text-white text-[10px] font-black px-3 py-1.5 rounded-xl uppercase shadow-sm">
      {type}
    </span>

    {shape && !isRechargeable && (
      <span class="bg-indigo-100 text-indigo-700 text-[10px] font-black px-3 py-1.5 rounded-xl uppercase border border-indigo-200/50">
        üì¶ {shape}
      </span>
    )}

    {isDimmable && (
      <span class="bg-amber-100 text-amber-800 text-[10px] font-black px-3 py-1.5 rounded-xl uppercase border border-amber-200">
        üîÜ Dimbar
      </span>
    )}

    {colorTemp && (
      <span class="bg-slate-100 text-slate-600 text-[10px] font-black px-3 py-1.5 rounded-xl uppercase">
        üå°Ô∏è {colorTemp}
      </span>
    )}

    {isRechargeable && (
      <span class="bg-emerald-100 text-emerald-800 text-[10px] font-black px-3 py-1.5 rounded-xl uppercase border border-emerald-200">
        üîå Oppladbar
      </span>
    )}
  </div>

  {notes && (
    <div class="mb-6 p-4 bg-slate-50/80 border border-slate-100 rounded-2xl relative">
      <div class="text-slate-400 absolute -top-2 -left-1 bg-white px-2 italic text-[10px] font-bold">Merknad</div>
      <p class="text-sm text-slate-600 leading-relaxed italic">"{notes}"</p>
    </div>
  )}

  <form method="POST">
    <input type="hidden" name="action" value="replace_item" />
    <input type="hidden" name="itemId" value={id} />
    <input type="hidden" name="itemType" value={type} />
    <input type="hidden" name="itemShape" value={shape || ""} />
    <input type="hidden" name="count" value={isRechargeable ? 0 : requiredCount} />
    
    <button 
      type="submit" 
      disabled={isOutOfStock}
      class={`w-full font-black py-4 rounded-[1.5rem] transition-all duration-200 flex items-center justify-center gap-2 active:scale-[0.97] ${
        isRechargeable 
          ? 'bg-emerald-600 hover:bg-emerald-500 text-white shadow-lg shadow-emerald-200' 
          : isOutOfStock 
            ? 'bg-slate-200 text-slate-400 cursor-not-allowed border-2 border-slate-100' 
            : 'bg-indigo-600 hover:bg-indigo-500 text-white shadow-lg shadow-indigo-100'
      }`}
    >
      {isRechargeable ? (
        <>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M11 20H4a2 2 0 0 1-2-2V5c0-1.1.9-2 2-2h5l2 2h9a2 2 0 0 1 2 2v10"/><path d="M16 22l2 2 4-4"/></svg>
          MARKER SOM LADA
        </>
      ) : isOutOfStock ? (
        'M√Ö KJ√òPA INN'
      ) : (
        <>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/><path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"/><path d="M16 16h5v5"/></svg>
          BYTT {requiredCount > 1 ? `${requiredCount} STK` : 'P√ÜRE/BATT.'}
        </>
      )}
    </button>
  </form>
</div>