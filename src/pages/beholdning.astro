export const prerender = false;
import Layout from "../layouts/Layout.astro";
import StockRefillCard from "../components/StockRefillCard.astro";
import { supabase, createAuthenticatedClient } from "../lib/supabase";
import type { StockItem } from "../types/inventory";

const { householdId } = Astro.locals;

// 1. AUTENTISERING & SETUP
const accessToken = Astro.cookies.get("sb-access-token")?.value;
const authedSupabase = accessToken ? createAuthenticatedClient(accessToken) : supabase;

const { data: household } = await authedSupabase
  .from("households")
  .select("type")
  .eq("id", householdId)
  .single();

const url = new URL(Astro.request.url);
const categoryFilter = url.searchParams.get("category") || "all";
const typeFilter = url.searchParams.get("type") || "all";
let errorMessage: string | null = null;

// 2. ACTION H√ÖNDTERING (POST)
if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const action = data.get("action");

    if (action === "adjust_stock") {
      const stockId = data.get("stockId");
      const stockType = data.get("stockType")?.toString() || "Vare";
      const adjustment = Number(data.get("adjustment"));

      const { data: curr } = await authedSupabase
        .from("stock")
        .select("current_count")
        .eq("id", stockId)
        .eq("household_id", householdId)
        .single();

      if (curr) {
        await authedSupabase
          .from("stock")
          .update({ current_count: Math.max(0, (curr.current_count || 0) + adjustment) })
          .eq("id", stockId);
        
        const act = adjustment > 0 ? "increased" : "decreased";
        return Astro.redirect(Astro.url.pathname + `?toast=${act}&item=${encodeURIComponent(stockType)}&amount=${Math.abs(adjustment)}`);
      }
    } else if (action === "add_new_stock_type") {
      const type = data.get("type")?.toString().toUpperCase().trim();
      const shape = data.get("shape")?.toString() || "";
      const category = data.get("category");
      const initialCount = Number(data.get("initialCount") || 0);
      const minThreshold = Number(data.get("minThreshold") || 2);
      const dimmable = data.get("dimmable") === "true";
      const rechargeable = data.get("rechargeable") === "true";

      const { data: existing } = await authedSupabase
        .from("stock")
        .select("id, current_count")
        .eq("household_id", householdId)
        .eq("type", type)
        .eq("shape", shape)
        .eq("dimmable", dimmable)
        .eq("rechargeable", rechargeable)
        .single();

      if (existing) {
        await authedSupabase
          .from("stock")
          .update({ current_count: (existing.current_count || 0) + initialCount })
          .eq("id", existing.id);
        return Astro.redirect(Astro.url.pathname + `?toast=repurchased&item=${encodeURIComponent(type)}&amount=${initialCount}`);
      } else {
        await authedSupabase.from("stock").insert([{
          type, shape, category, current_count: initialCount,
          min_threshold: minThreshold, dimmable, rechargeable, household_id: householdId
        }]);
        return Astro.redirect(Astro.url.pathname + `?toast=newstock&item=${encodeURIComponent(type)}&amount=${initialCount}`);
      }
    } else if (action === "delete_stock") {
      const stockId = data.get("stockId");
      const stockType = data.get("stockType")?.toString() || "Vare";
      await authedSupabase.from("stock").delete().eq("id", stockId).eq("household_id", householdId);
      return Astro.redirect(Astro.url.pathname + `?toast=stockdeleted&item=${encodeURIComponent(stockType)}`);
    }
  } catch (error: any) {
    errorMessage = "Det oppstod en feil ved oppdatering av lageret.";
  }
}

// 3. AUTO-GENERERING AV LAGERLINJER
const { data: usedItems } = await authedSupabase
  .from("items")
  .select("type, shape, quantity, required_count, category, dimmable, rechargeable")
  .eq("household_id", householdId)
  .not("type", "is", null);

const { data: existingStock } = await authedSupabase
  .from("stock")
  .select("type, shape, dimmable, rechargeable")
  .eq("household_id", householdId);

if (usedItems && existingStock) {
  const itemsToCreate: any[] = [];
  for (const item of usedItems) {
    const itemType = item.type?.trim().toUpperCase();
    const itemShape = item.shape?.trim() || "";
    const itemCategory = item.category || "bulb";
    const quantity = item.quantity || 1;
    const req = item.required_count || 1;

    if (itemCategory === "ink" && itemShape.includes(",")) {
      const cartridges = itemShape.split(",").map((c: string) => c.trim());
      for (const cart of cartridges) {
        if (!existingStock.some(s => s.type?.trim().toUpperCase() === itemType && s.shape === cart)) {
          if (!itemsToCreate.some(i => i.type === itemType && i.shape === cart)) {
            itemsToCreate.push({ type: itemType, shape: cart, current_count: 0, min_threshold: quantity, category: 'ink', household_id: householdId });
          }
        }
      }
    } else {
      const exists = existingStock.some(s => 
        s.type?.trim().toUpperCase() === itemType && s.shape === itemShape &&
        s.dimmable === (item.dimmable || false) && s.rechargeable === (item.rechargeable || false)
      );
      if (!exists && !itemsToCreate.some(i => i.type === itemType && i.shape === itemShape)) {
        itemsToCreate.push({
          type: itemType, shape: itemShape, current_count: 0, min_threshold: quantity * req,
          category: itemCategory, dimmable: item.dimmable, rechargeable: item.rechargeable, household_id: householdId
        });
      }
    }
  }
  if (itemsToCreate.length > 0) {
    await authedSupabase.from("stock").insert(itemsToCreate);
    return Astro.redirect(Astro.url.pathname);
  }
}

// 4. DATAHENTING FOR VISNING
const { data: dbStock } = await authedSupabase
  .from("stock")
  .select("*")
  .eq("household_id", householdId)
  .order("category", { ascending: true })
  .order("type", { ascending: true });

const shoppingList = (dbStock || []).filter((item) => (item.current_count ?? 0) <= (item.min_threshold ?? 2));

const stockItems: StockItem[] = (dbStock || []).map((s) => ({
  id: s.id, type: s.type, category: s.category || "bulb",
  currentCount: s.current_count, minThreshold: s.min_threshold,
  shape: s.shape, dimmable: s.dimmable, rechargeable: s.rechargeable,
}));

const availableTypes = Array.from(new Set(stockItems.filter(i => categoryFilter === "all" || i.category === categoryFilter).map(i => i.type).filter(Boolean))).sort();
