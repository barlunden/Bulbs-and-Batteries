          </label>

          <button type="submit" class="w-full bg-white text-amber-600 font-black py-4 rounded-2xl shadow-lg active:scale-[0.98] transition-all">
            LEGG TIL P칁RER
          </button>
        </form>
      </section>
      )}

      <!-- BATTERI -->
      {(categoryFilter === "all" || categoryFilter === "battery") && (
      <section class="bg-gradient-to-br from-emerald-500 to-teal-600 p-6 rounded-[2rem] shadow-xl">
        <div class="flex items-center gap-3 mb-6">
          <div class="bg-white/30 p-2 rounded-xl text-white">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><rect width="16" height="10" x="2" y="7" rx="2" ry="2"/><path d="M22 11v2"/></svg>
          </div>
          <h2 class="text-white font-black uppercase tracking-widest text-xs">
            游댊 Kj칮p Batteri
          </h2>
        </div>

        <form method="POST" class="space-y-4">
          <input type="hidden" name="action" value="add_new_stock_type" />
          <input type="hidden" name="category" value="battery" />
          <input type="hidden" name="shape" value="" />

          <div>
            <label class="block text-[9px] font-black text-emerald-900 uppercase mb-1 ml-1">Type (AA, AAA, CR2032)</label>
            <input
              type="text"
              name="type"
              required
              placeholder="AA"
              class="w-full bg-white/90 border border-white/40 rounded-xl px-4 py-3 text-slate-900 font-bold outline-none focus:bg-white"
            />
          </div>

          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-[9px] font-black text-emerald-900 uppercase mb-1 ml-1">Antall</label>
              <input type="number" name="initialCount" required placeholder="0" class="w-full bg-white rounded-xl px-4 py-3 text-slate-900 font-bold outline-none" />
            </div>
            <div>
