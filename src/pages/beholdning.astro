---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import StockRefillCard from "../components/StockRefillCard.astro";
import { supabase } from "../lib/supabase";
import type { StockItem } from "../types/inventory";

// 1. AUTH SJEKK i src/middleware.ts

// 2. ACTION HÃ…NDTERING (POST)
if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const action = data.get("action");

    // Juster eksisterande lager (+/-)
    if (action === "adjust_stock") {
      const stockId = data.get("stockId");
      const adjustment = Number(data.get("adjustment"));
      const { data: curr } = await supabase.from("stock").select("current_count").eq("id", stockId).single();
      if (curr) {
        await supabase.from("stock").update({ 
            current_count: Math.max(0, (curr.current_count || 0) + adjustment) 
        }).eq("id", stockId);
      }
    }

    // Registrer heilt ny varetype med antal
    else if (action === "add_new_stock_type") {
      await supabase.from("stock").insert([{
        type: data.get("type")?.toString().toUpperCase(),
        shape: data.get("shape")?.toString() || "",
        category: data.get("category"),
        current_count: Number(data.get("initialCount") || 0),
        min_threshold: Number(data.get("minThreshold") || 2),
      }]);
    }
  } catch (error: any) {
    console.error("Lager-feil:", error.message);
  }
}

// 3. HENT LAGERDATA
// 3. HENT LAGERDATA (Sortert etter kategori, sÃ¥ type)
const { data: dbStock } = await supabase
  .from("stock")
  .select("*")
  .order("category", { ascending: true }) // Batteri kjem fÃ¸r Bulb (B fÃ¸r B, men vi kan tvinge rekkefÃ¸lgja)
  .order("type", { ascending: true });

const stockItems: StockItem[] = (dbStock || []).map(s => ({
  id: s.id, 
  type: s.type, 
  category: s.category, 
  currentCount: s.current_count, 
  minThreshold: s.min_threshold, 
  shape: s.shape
}));
