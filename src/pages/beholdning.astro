---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import StockRefillCard from "../components/StockRefillCard.astro";
import { supabase, createAuthenticatedClient } from "../lib/supabase";
import type { StockItem } from "../types/inventory";

const { householdId } = Astro.locals;

// Lag ein autentisert Supabase-klient for denne requesten
const accessToken = Astro.cookies.get("sb-access-token")?.value;
const authedSupabase = accessToken ? createAuthenticatedClient(accessToken) : supabase;

// Hent husstandstype for 친 bestemme default modus
const { data: household } = await authedSupabase
  .from("households")
  .select("type")
  .eq("id", householdId)
  .single();

const householdType = household?.type || "home";

// Bestem categoryFilter fra URL
const url = new URL(Astro.request.url);
const categoryFilter = url.searchParams.get("category") || "all";

// Feilmelding fr친 POST
let errorMessage: string | null = null;

// 1. ACTION H칀NDTERING
if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const action = data.get("action");

    if (action === "adjust_stock") {
      const stockId = data.get("stockId");
      const adjustment = Number(data.get("adjustment"));

      const { data: curr, error: fetchError } = await authedSupabase
        .from("stock")
        .select("current_count")
        .eq("id", stockId)
        .eq("household_id", householdId)
        .single();

      if (fetchError) {
        console.error("Feil ved henting av stock:", fetchError);
        errorMessage = "Kunne ikke hente lagerdata";
      }

      if (curr) {
        const { error: updateError } = await authedSupabase
          .from("stock")
          .update({
            current_count: Math.max(0, (curr.current_count || 0) + adjustment),
          })
          .eq("id", stockId);
        
        if (updateError) {
          console.error("Feil ved oppdatering av stock:", updateError);
          errorMessage = "Kunne ikke oppdatere lageret";
        } else {
          return Astro.redirect(Astro.url.pathname);
        }
      }
    } else if (action === "add_new_stock_type") {
      const type = data.get("type")?.toString().toUpperCase().trim();
      const shape = data.get("shape")?.toString() || "";
      const category = data.get("category");
      const initialCount = Number(data.get("initialCount") || 0);
      const minThreshold = Number(data.get("minThreshold") || 2);
      const dimmable = data.get("dimmable") === "true";
      const rechargeable = data.get("rechargeable") === "true";

      // Sjekk om varen finst fr친 f칮r (inkluder dimmable/rechargeable i n칮kkelen)
      const { data: existing } = await authedSupabase
        .from("stock")
        .select("id, current_count")
        .eq("household_id", householdId)
        .eq("type", type)
        .eq("shape", shape)
        .eq("dimmable", dimmable)
        .eq("rechargeable", rechargeable)
        .single();

      if (existing) {
        // Gjenkj칮p: legg til antalet p친 eksisterande vare
        const { error: updateError } = await authedSupabase
          .from("stock")
          .update({
            current_count: (existing.current_count || 0) + initialCount,
          })
          .eq("id", existing.id);

        if (updateError) {
          console.error("Feil ved oppdatering av stock:", updateError);
          errorMessage = `Kunne ikke oppdatere lageret: ${updateError.message}`;
        } else {
          console.log(`Lagt til ${initialCount} stk ${type}`);
          return Astro.redirect(Astro.url.pathname);
        }
      } else {
        // Nytt produkt: opprett ny rad
        const { error: insertError } = await authedSupabase.from("stock").insert([
          {
            type,
            shape,
            category,
            current_count: initialCount,
            min_threshold: minThreshold,
            dimmable,
            rechargeable,
            household_id: householdId,
          },
        ]);

        if (insertError) {
          console.error("Feil ved innsetting av stock:", insertError);
          errorMessage = `Kunne ikke legge til vare: ${insertError.message}`;
        } else {
          console.log("Nytt produkt opprettet:", type);
          return Astro.redirect(Astro.url.pathname);
        }
      }
    }
  } catch (error: any) {
    console.error("Lager-feil:", error.message);
  }
}

/// 2. AUTO-GENERERING (Robust versjon)
const { data: usedItems } = await authedSupabase
  .from("items")
  .select("type, shape, quantity, required_count")
  .eq("household_id", householdId)
  .not("type", "is", null);

const { data: existingStock } = await authedSupabase
  .from("stock")
  .select("type, shape")
  .eq("household_id", householdId);

if (usedItems && existingStock) {
  const itemsToCreate: {
    type: string;
    shape: string;
    current_count: number;
    min_threshold: number;
    category: string;
    household_id: typeof householdId;
  }[] = [];
  
  for (const item of usedItems) {
    // Vi vaskar begge verdiane f칮r vi samanliknar for 친 unng친 loop
    const itemType = item.type?.trim().toUpperCase();
    const itemShape = item.shape?.trim() || "";

    const exists = existingStock.some(s => 
      s.type?.trim().toUpperCase() === itemType && 
      (s.shape?.trim() || "") === itemShape
    );

    if (!exists) {
      // Sjekk om vi allerede har lagt den til i lista over ting som skal opprettes 
      // (viss fleire lamper brukar same p칝re)
      const alreadyInBatch = itemsToCreate.some(i => i.type === itemType && i.shape === itemShape);
      
      if (!alreadyInBatch) {
        // Beregn total mengd basert p친 quantity (antal like enheter) og required_count (p칝rer per enhet)
        const quantity = item.quantity || 1;
        const requiredCount = item.required_count || 1;
        const totalNeeded = quantity * requiredCount;
        
        itemsToCreate.push({
          type: itemType,
          shape: itemShape,
          current_count: 0,
          min_threshold: totalNeeded, // Sett terskelverdien basert p친 totalt behov
          category: 'bulb',
          household_id: householdId
        });
      }
    }
  }

  if (itemsToCreate.length > 0) {
    console.log("Oppretter manglende lagerlinjer:", itemsToCreate.length);
    const { error: autoInsertError } = await authedSupabase.from("stock").insert(itemsToCreate);
    if (autoInsertError) {
      console.error("Feil ved auto-generering av stock:", autoInsertError);
    }
    return Astro.redirect(Astro.url.pathname); 
  }
}

// 3. DATAHENTING
// Hent all beholdning for dette huset f칮rst
const { data: dbStock, error: dbError } = await authedSupabase
  .from("stock")
  .select("*")
  .eq("household_id", householdId)
  .order("category", { ascending: true })
  .order("type", { ascending: true });

// Lag handlelista manuelt basert p친 dbStock for 친 unng친 kompliserte SQL-filter
// Lag handlelista manuelt med solid feilhandtering
const shoppingList = (dbStock || []).filter((item) => {
  const count = item.current_count ?? 0; // Viss null, bruk 0
  const threshold = item.min_threshold ?? 2; // Viss null, bruk 2
  return count <= threshold;
});

const stockItems: StockItem[] = (dbStock || []).map((s) => ({
  id: s.id,
  type: s.type,
  category: s.category || "bulb",
  currentCount: s.current_count,
  minThreshold: s.min_threshold,
  shape: s.shape,
  dimmable: s.dimmable,
  rechargeable: s.rechargeable,
}));
---

